/* components/music_item/index.wxss */
.music_item {
  display: flex;
  align-items: flex-start;
  margin: 20rpx 30rpx;
}

.order {
  margin-right: 30rpx;
}
.music_name {
  font-size: 32rpx;
}
.singer_name {
  font-size: 28rpx;
  color: #999;
  margin-top: 12rpx;
}
/* 高亮显示 */
.music_item.active {
  color: red;
}
.music_item.active .singer_name {
  color: red;
}
