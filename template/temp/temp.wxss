.book_container {
  display: flex;
  padding: 10rpx 20rpx 20rpx;
}
.book_img {
  width: 220rpx;
  height: 300rpx;
  /* flex-basis: 200rpx; */
  margin-right: 20rpx;
}

.book_info {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-top: 10rpx;
  justify-content: space-around;
}
.book_title {
  font-size: 40rpx;
  font-weight: bold;
}
.hot {
  display: flex;
  align-items: center;
  margin: 10rpx 0;
}
.hot > text {
  margin-right: 30rpx;
}
.hot image {
  width: 36rpx;
  height: 36rpx;
}
.book_summary {
  font-size: 30rpx;
  color: #999;
}
.author_box {
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.author_box > view {
  display: flex;
  align-items: center;
}
.author_box image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}
