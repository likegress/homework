/* pages/news_detail/news_detail.wxss */
.container {
  align-items: flex-start;
}
.haed {
  position: relative;
  width: 100%;
}
.img {
  width: 100%;
}
.musicImg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.author_box {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.avatar {
  width: 60rpx;
  height: 60rpx;
  margin-right: 30rpx;
}
.author {
  color: #999;
  font-size: 28rpx;
  margin-right: 20rpx;
}
.date {
  color: #999;
  font-size: 24rpx;
  margin-left: 20rpx;
}
.title {
  margin: 20rpx;
  font-weight: bold;
}
.line {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  position: relative;
}
.line image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}
.line::after {
  content: "";
  display: block;
  width: 100%;
  height: 5rpx;
  background: #ddd;
  position: absolute;
  left: 0;
  top: 50%;
  z-index: -1;
}
.summary {
  margin: 20rpx;
  color: #999;
  font-size: 28rpx;
  /* text-indent: 2em; */
}
