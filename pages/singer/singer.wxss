/* pages/singer/singer.wxss */
.singer_container {
  width: 100%;
}
.singer_container .title {
  padding: 20rpx 30rpx;
  background: #ddd;
  font-size: 36rpx;
  font-weight: 500;
}
.list {
  padding: 10rpx 30rpx;
}
.list .item {
  display: flex;
  width: 100%;
  align-items: center;
  /* padding: ; */
}
.list .item image {
  width: 120rpx;
  height: 120rpx;
}
.list .item .name {
  flex: 1;
  height: 120rpx;
  line-height: 120rpx;
  margin-left: 20rpx;
  padding: 10rpx;
  border-bottom: 1rpx solid #999;
}
.item:last-child .name {
  border: none;
}
.fixed_nav {
  position: fixed;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}
.fixed_nav .title {
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 50%;
  margin: 5rpx;
}
.fixed_nav .title.active {
  background: yellowgreen;
  color: #fff;
}
