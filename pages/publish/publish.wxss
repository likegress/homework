/* pages/publish/publish.wxss */
@import "/utils/icon.wxss";
.header_container {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 30rpx;
  align-items: center;
}
.header_container button {
  margin: 0;
}
.xiangfa {
  color: aquamarine;
}
.textarea {
  margin: 0 30rpx;
  border: 1rpx solid #999;
  min-height: 300rpx;
}
.img_container {
  margin: 10rpx 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}
.img_container::after {
  content: "";
  display: block;
  width: 220rpx;
}
.img_wrap {
  width: 220rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.del {
  position: absolute;
  top: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.3);
  color: #fff;
  padding: 10rpx;
}
.img_wrap image {
  width: 100%;
  height: 100%;
}
.img_wrap .icon-jiahao {
  display: block;
  font-size: 80rpx;
  border: 1rpx dashed #ccc;
  color: #ccc;
  line-height: 220rpx;
  text-align: center;
}
