/* pages/city/city.wxss */
.city_container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  overflow: hidden;
}
.header {
  margin: 30rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  background: #eee;
  flex-basis: 60rpx;
  border-radius: 60rpx;
  padding-left: 30rpx;
}
.header input {
  flex: 1;
  font-size: 28rpx;
  margin-right: 10rpx;
}
.city_list {
  margin-left: 30rpx;
  width: 100%;
  flex: 1;
  overflow: hidden;
}
.city_list scroll-view {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-right: 15%;
}
.title {
  display: flex;
  align-items: center;
}
.subTitle {
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  background: #eee;
  border-radius: 50%;
}
.line {
  flex: 1;
  height: 1rpx;
  background: #eee;
  margin-left: 10rpx;
}
.list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 20rpx;
}
.city_item {
  width: 31%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.list::after {
  content: "";
  width: 31%;
}
.city_item.active {
  background: orange;
}
.fixed_list {
  position: fixed;
  right: 20rpx;
  top: 140rpx;
}
.fixed_item {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  padding: 5rpx;
  border-radius: 50%;
}
.fixed_item.active {
  background: orange;
  color: #fff;
  transition: all 0.3s;
}
