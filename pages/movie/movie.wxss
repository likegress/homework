/* pages/movie/movie.wxss */
.movie_container {
  background: #f5f5f5;
  width: 100%;
}
.search_box {
  box-sizing: border-box;
  width: 100%;
  padding: 10rpx 30rpx;
  align-self: flex-start;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.search_box input {
  width: 85%;
}
.search_box icon {
  height: 100%;
}
.movie_list {
  display: block;
  margin-bottom: 20rpx;
}
.search_list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 30rpx;
}
c-movie {
  margin-bottom: 20rpx;
}
.search_list::after {
  content: "";
  display: block;
  width: 210rpx;
}
